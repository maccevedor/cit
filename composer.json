{
    "name": "cit/drupal-event-platform",
    "description": "Drupal Event Management Platform for Software Architect Interview",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "require": {
        "composer/installers": "^1.12",
        "drupal/core": "^10.2",
        "drupal/core-recommended": "^10.2",
        "drupal/core-composer-scaffold": "^10.2",
        "drupal/core-project-message": "^10.2",
        "drush/drush": "^11.0"
    },
    "require-dev": {
        "drupal/core-dev": "^10.0",
        "phpunit/phpunit": "^9.6",
        "symfony/phpunit-bridge": "^6.0",
        "pestphp/pest": "^1.0",
        "pestphp/pest-plugin-parallel": "^1.0",
        "pestphp/pest-plugin-coverage": "^1.0",
        "mockery/mockery": "^1.5"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "tbachert/spi": true
        },
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        },
        "drupal-core-project": {
            "minimum-version": "10.0"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
        ],
        "post-update-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
        ],
        "test": "pest",
        "test:coverage": "pest --coverage",
        "test:parallel": "pest --parallel",
        "test:unit": "pest tests/Unit",
        "test:feature": "pest tests/Feature"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Drupal\\event_notifier\\": "web/modules/custom/event_notifier/src/"
        }
    }
}
